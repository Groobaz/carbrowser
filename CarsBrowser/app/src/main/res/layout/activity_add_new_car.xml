<?xml version="1.0" encoding="utf-8"?>

<ScrollView android:layout_height="1000dp"
    android:layout_width="match_parent"

    xmlns:android="http://schemas.android.com/apk/res/android" >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rent.carsbrowser.add.AddNewActivityCar">

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/noimageplaceholder"
        android:id="@+id/imageID"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:layout_gravity="center"
        android:id="@+id/add_image_buttonID"
        android:text="Add image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/makeID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="make"/>

    <EditText
        android:id="@+id/modelID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="model"/>

    <EditText
        android:id="@+id/yearID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="4"
        android:hint="year"/>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/add_car_buttonID"
        android:text="Add Car"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>